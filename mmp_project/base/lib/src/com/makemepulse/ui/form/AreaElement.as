package com.makemepulse.ui.form{	import flash.display.DisplayObjectContainer;	import flash.events.TextEvent;	import flash.text.TextField;        /**     * @author Nicolas Rajabaly - nicolas@makemepulse.com     */    public class AreaElement extends TextFieldElement{    	    	    	 public function AreaElement (tabIndex:int,id:String,display:DisplayObjectContainer,validators : Array,defaultValue:FormDefaultValue,required:Boolean=false,label:TextField=null,pwd:Boolean=false,restrict:String=null,length:int=0) {    	 	super(tabIndex,id,display,validators,defaultValue,required,label,pwd,restrict,length);    	 	_build();    	 }    	     	 private function _build():void{    	 	_field.addEventListener(TextEvent.TEXT_INPUT, _onMessageInput,false,0,true);        }                override public function dispose():void{        	_field.removeEventListener(TextEvent.TEXT_INPUT, _onMessageInput);        	super.dispose();        }                private function _onMessageInput (event : TextEvent) : void {        	if ( event.text.charCodeAt() == 10 ) event.preventDefault();        }    }}