package com.makemepulse.ui.form {	import flash.utils.Dictionary;        /**     * @author Nicolas Rajabaly - nicolas@makemepulse.com     */    public class Form implements IFormElement{    	    	    	private var _elts : Vector.<IFormElement>;    	private var _idelts:Dictionary;        private var _id : String;                        public function Form(id:String){        	_id=id;        	_idelts=new Dictionary();    		_elts = new Vector.<IFormElement>();        }                public function push (element : IFormElement):void{        	if( isIn(element) ) return;        	_elts.push(element);        	_idelts[element.id]=true;        }                public function isIn(element : IFormElement):Boolean{        	if (_idelts[element.id]==true) {        		return true;        	}        	return false;        }        public function remove (element : IFormElement):void{			for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		if(elt==element) {        			_elts.splice(i,1);        			_idelts[element.id]=null;        			return;            	}        	}		}				public function reset () : void {        	for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		elt.reset();        	}        }                public function dispose () : void {        	for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		elt.dispose();        	}        }                public function showError () : void {        	for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		elt.showError();        	}        }                public function setToError():void{        	        }                public function hideError () : void {        	for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		elt.hideError();        	}        }                public function isValid () : Boolean {        	for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		if(elt.isValid()==false) return false;        	}        	return true;        }                public function getValue():*{        	return isValid();        }                public function getElement(id:String) : IFormElement{        	  for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		if(elt.id==id) return elt;        	  }        	  return null;        }                public function set error_color (value : int) : void {            for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		elt.error_color = value;        	}        }                      public function set default_color (value : int) : void {            for (var i : int = 0; i < _elts.length; i++) {        		var elt : IFormElement=_elts[i];        		elt.default_color = value;        	}        }                public function get id () : String {        	return _id;        }    }}