package com.makemepulse.action{	import net.pixlib.commands.PXFrontController;	import flash.events.Event;	import flash.events.EventDispatcher;              /**     * @author Nicolas Rajabaly - nicolas@makemepulse.com     */    public class Action extends EventDispatcher {    	    	    	private var _oController : PXFrontController;    	private static var _oI:Action=null;    	    	public function Action(o:ConstructorAccess){    		_oController=new PXFrontController();    	}    	    	public function fire( e : Event ) : void{			//			if ( _oController.isRegistered( e.type ) ) {				_oController.handleEvent( e );			} else{				throw new Error("Action failure: " + e.type );			}		}    	    	public static function getInstance() : Action {			if ( Action._oI is Action ) return Action._oI;			Action._oI = new Action(new ConstructorAccess());			return  Action._oI;		}				public function pushCommandClass( eventName : String, command : Class ) : Boolean{			var result:Boolean = _oController.pushCommandClass(eventName, command);            trace( _oController.isRegistered( eventName ) );            return result;		}					    }		}internal class ConstructorAccess {}